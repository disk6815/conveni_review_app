
<div class='container'>
    <div class='row g-4 '>
    <% @reviews.each do |review| %>
        <div class='col-12 col-sm-6 col-md-4'>
            <div class='position-relative'>
            <%= link_to 'delete', review_path(review), data: { turbo_method: :delete, turbo_confirm: 'really' }, class: 'btn btn-danger btn-sm m-2' %>
                <%= link_to edit_review_path(review), class: 'card w-100', style: 'width: 18rem; height: auto;' do %>
                <div class='card-body'>
                    <%= image_tag 'no_image.jpg', class: 'card-img-top' %>
                    <h5 class='card-title'><%= review.product.conveniencestore.name %></h5>
                    <p class='card-title'><%= review.product.name %></p>
                    <p><%= review.user.name %></p>
                    <p><%= review.user.nationality %></p>
                </div>
                <% end %>
            </div>
        </div>
    <% end %>
    </div>
    <p>ページネーション</p>        
</div>