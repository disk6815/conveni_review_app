
<div class='container'>
    <div class="mb-4 text-center">
    <%= link_to '🇰🇷' + t('reviews.index.kr_link'), by_nationality_reviews_path('kr'), class: 'btn btn-outline-success mx-1' %>
    <%= link_to '🇯🇵' + t('reviews.index.jr_link'), by_nationality_reviews_path('jp'), class: 'btn btn-outline-primary mx-1' %>
    <%= link_to '🌍' + t('reviews.index.word_link'), reviews_path, class: 'btn btn-outline-secondary mx-1' %>
    </div>    
    <div class='row g-4 '>
    <% @reviews.each do |review| %>
        <div class='col-12 col-sm-6 col-md-34 col-lg-3'>
            <div class='position-relative' >
                <%= link_to review_path(review), class: 'card', style: 'text-decoration: none;' do %>
                <div class='card-body '>
                    <div class='card-img-top' style='height: 150px; width: 100%; overflow: hidden;'>
                    <% if review.image.present? %>
                    <%= image_tag review.image.url, class: 'card-img-top h-100', style: 'object-fit: cover;' %>
                    <% else %>
                    <%= image_tag 'no_image.jpg', class: 'card-img-top h-100', style: 'object-fit: cover;' %>
                    <% end %>
                    </div>
                    <p class="card-text">
                        <%= t('reviews.index.rating')%>：<%= "★" * review.rating.to_i + "☆" * (5 - review.rating.to_i) %>  <%= review.rating %>
                    </p>
                    <h5 class='card-title'><%= review.product.name %></h5>
                    <p class='card-title'><%= t('reviews.index.conveniencestore')%>: <%= review.product.conveniencestore.name %></p>
                    <p><%= t('reviews.index.user_name')%>: <%= review.user.name %></p>
                    <p><%= t('reviews.index.nationality')%>:
                       <% case review.user.nationality %> 
                        <% when 'jp' %>
                            <span>
                                Japan <%= image_tag 'japan.svg', style: 'width: 20px;' %>
                            </span>
                            <% when 'kr' %>
                            <span>
                                Korea <%= image_tag 'korea.svg', style: 'width: 25px;' %>
                            </span>
                        <% end %>
                    </p>
                </div>
                <% end %>
            </div>
        </div>
    <% end %>
    </div>
</div>