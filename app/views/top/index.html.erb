<div class='container-xxl top_page text-center'>
  <div class='row py-5'>
    <div class='col-md-7'>
      <h3>
        <%= t('top.reviews')%>
      </h3>
      <div class="image-wrapper">
       <%= link_to reviews_path do %>
         <%= image_tag 'review_index.png', class: 'w-100 h-100', style: 'object-fit: cover;  border-radius: 20px;' %>
       <% end %>
      </div> 
    </div>
      <div class='col-md col'>
        <h3>
          <%= t('top.post')%>
        </h3>
        <div class="image-wrapper">
         <%= link_to new_review_path do %>
           <%= image_tag 'post.jpg', class: 'w-100 h-100', style: 'object-fit: cover;  border-radius: 20px;' %>
         <% end %>
        </div> 
      </div>
      <div class='col-md col'>
        <h3>
          <%= t('top.list')%>
        </h3>
        <div class="image-wrapper">
          <%= link_to '#' do %>
            <%= image_tag 'list.jpg', class: 'w-100 h-100', style: 'object-fit: cover;  border-radius: 20px;' %>
          <% end %>
        </div>
      </div>
  </div>

  <div class='row pb-5 text_box'>
    <div class='col-md-7' >
        <div class='mb-0 text-start text_content'>
            <p class='h-50 d-flex align-items-center justify-content-start'>
                <%= t('top.text_1')%>
            </p>
            <p>
                <%= t('top.text_2')%>
                <%= image_tag 'memo.svg', style:'height: 40px; width:40px;' %>
            </p>
        </div>
    </div>
    <div class='col-md col'>
        <h3><%= t('top.post_history')%></h3>
        <div class="image-wrapper">
            <%= link_to '#' do %>
                <%= image_tag 'mypost.jpg', class: 'w-100 h-100', style: 'object-fit: cover;  border-radius: 20px;' %>
            <% end %>
        </div> 
    </div>
    <div class='col-md col'>
        <h3><%= t('top.service')%></h3>
        <div class="image-wrapper">
            <%= link_to '#' do %>
                <%= image_tag 'service.jpg', class: 'w-100 h-100', style: 'object-fit: cover;  border-radius: 20px;' %>
            <% end %>
        </div>
    </div>
  </div> 
</div>