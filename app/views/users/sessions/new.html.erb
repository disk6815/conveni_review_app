<div class='text-center'>
  <%= image_tag 'log.svg', style: 'width:200px;'%>
</div>
<div class='container bg-white p-4 shadow-sm rounded-3 w-50'>
  <h2 class='text-center'><%= t('.title') %></h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field mt-3">
      <%= f.label :email, class: 'form-label' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class="field mt-3">
      <%= f.label :password, class: 'form-label' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
    </div>

    <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'mt-4 d-block text-center' %>

    <div class="actions mt-4">
      <%= f.submit "Log in", class: 'btn btn-primary w-100'%>
    </div>
  <% end %>

  <span class='mt-4 d-block text-center add_line'>or</span>

  <p class='text-center mt-3'>新規登録がまだの方はこちらから</p>
  <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-secondary d-block' %>
  <%= link_to "top", root_path, class: 'btn btn-secondary d-block mt-3' %>

</div>